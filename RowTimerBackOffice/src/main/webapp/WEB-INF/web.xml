   <resource-ref>
        <description>Database resource for Rowing Timmer Backoffice</description>
        <res-ref-name>jdbc/rowTimerDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
   </resource-ref>   
</web-app>
