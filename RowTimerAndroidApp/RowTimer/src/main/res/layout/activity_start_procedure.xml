<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.iscte.row_timer.android.activities.StartProcedureActivity"

    android:padding="0dp"
    android:background="@color/bluePrimary">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/start_alignment"
            android:layout_width="fill_parent"
            android:layout_height="754dp"
            android:choiceMode="none" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100dp"
        android:id="@+id/tvCountdown"
        android:text="15:00"
        android:textColor="#FFF"
        android:layout_above="@+id/btnStartRace"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/btnStartRace"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"

        android:minWidth="250dp"
        android:background="@color/blueDark"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="markStartOfRace"
        android:layout_gravity="center_horizontal" />

</RelativeLayout>



